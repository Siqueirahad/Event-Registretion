        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // Cria uma nova instância de GlideAjax para chamar o Script Include
    var ga = new GlideAjax('GetEventSeats');
    ga.addParam('sysparm_name', 'getAvailableSeats');
    ga.addParam('sysparm_event_id', newValue); // Passa o sys_id do evento selecionado

    // Recebe a resposta e preenche o campo do formulário
    ga.getXMLAnswer(function(response) {
        var result = response;
        if (result) {
            var seatInfo = JSON.parse(result);
            g_form.setValue('avaliable_seats', seatInfo.available_seats);
        }
    });
}
